# vim: ft=msmtp

account gmail
host smtp.gmail.com
port 587
protocol smtp
auth on
from chris@ctoomey.com
user chris@ctoomey.com
passwordeval ~/bin/keychain-password chris@ctoomey.com
tls on
tls_nocertcheck

account thoughtbot
host smtp.gmail.com
port 587
protocol smtp
auth on
from chris@thoughtbot.com
user chris@thoughtbot.com
passwordeval ~/bin/keychain-password chris@thoughtbot.com
tls on
tls_nocertcheck

account default : gmail
