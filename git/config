[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	st = status -sb
	unstage = reset
	unchange = checkout --
  b = branch
  co = checkout
  master = checkout master
  mylog = log --graph --abbrev-commit --date=relative --all
  l = "!source ~/.githelpers && pretty_git_log"
  sl = "!git --no-pager log --oneline --decorate --graph -20"
  sla = "!git --no-pager log --oneline --decorate --all --graph -35"
  slall = "!git log --oneline --decorate --all --graph"
  unreleased = "!git l production/master..master"
  lnames = "!git --no-pager show --name-only $1"
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
	aa = add --all
  glog = log --all -15 --graph --pretty=oneline --abbrev-commit --decorate
  npr = 'pull-request'
  rmdeleted = "!git rm $(git ls-files --deleted)"
  bhist = "!git --no-pager reflog $(git rev-parse --abbrev-ref HEAD)"
  cm = commit -m
  ca = commit --amend
  cob = checkout -b
	df = diff --word-diff --color-words
  dc = diff --word-diff --cached --color-words
  rbc = rebase --continue
  rom = remote add origin
  pom = push -u origin master
  rpo = remote prune origin
  copysha = "!git rev-parse HEAD | pbcopy"
[core]
	editor = mvim -v
	excludesfile = ~/.gitignore
[clean]
	requireForce = false
[url "git@heroku.com:"]
  # $ git remote add heroku:sushi.git
  insteadOf = heroku:
[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
[user]
	name = Chris Toomey
	email = chris@ctoomey.com
[push]
	default = upstream
[merge]
  ff = only
